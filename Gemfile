source 'https://rubygems.org'
ruby '2.4.2'

# For REST queries
gem 'faraday', '~> 0.9.0'
gem 'typhoeus', '~> 1.3.0'

# Fast threaded server
gem 'puma', '~> 2.6.0'

gem 'sinatra', '~> 1.4.8'

# Prevent overloading the server
gem 'rack-cache'
gem 'dalli'

# Load env vars from a .env file if development?
gem 'dotenv'

# Use newrelic
gem 'newrelic_rpm'
